<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="../public/css/search.css">

</head>

<body>
        <form class="form" id="postForm">
            <h3>Write your post</h3>
            <div class="form-group">
                
                <label for="post-writing">Title:</label>
                <input class="form-input" type="text" id="postTitle" />
            </div>
            <div class="form-group">
                <label for="post-writing">Message</label>
                <input class="form-input" type="text" id="postContent" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit" id="submit-button">submit</button>
            </div>
        </form>


    <section id="divideLists">
        <ul id="west"></ul>
        <ul id="east"></ul>
    </section>
     
        
    <results id="results">
        <div id="show">
            <div id="game">
                <div class="pic">
                    <img id="homePic">
                    <p id='home'></p>
                </div>
                <p>VS</p>
                <div class="pic">
                    <img id="visitorPic">
                    <p id='visitors'></p>
                </div>
            </div>

            <div class="stats">
                <p>Scores</p>
                <div class="info">
                    <ul id="homeStats">
                    </ul>
                    <ul id="visitorStats">
                    </ul>
                </div>
            </div>
        </div>
    </results>
    </section>
   

{{#each libraries as |post|}}
{{> post}}
{{/each}}


<script src="../public/js/Crud.js"></script>
<script src="../public/js/search.js"></script>
<script src="../public/js/login.js"></script>
</body>
</html>