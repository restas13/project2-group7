<h1>Login</h1>

<form class="form login-form">
  <div class="form-group">
    <label for="email-login">email:</label>
    <input class="form-input" type="text" id="email-login" />
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="submit-button">login</button>
  </div>
</form>


<h1>Sign Up</h1>

<form class="form signup-form">
  <div class="form-group">
    <label for="username-sup">username:</label>
    <input class="form-input" type="text" id="username-sup" />
  </div>
  <div class="form-group">
    <label for="email-sup">email:</label>
    <input class="form-input" type="text" id="email-sup" />
  </div>
  <div class="form-group">
    <label for="password-sup">password:</label>
    <input class="form-input" type="password" id="password-sup" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="submit-button">Sign up</button>
  </div>
</form>

<script src="../public/js/login.js"></script>

